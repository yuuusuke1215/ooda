<% if current_user.favoritePost?(oodapost) %>
  <%= form_with(model: current_user.favorites.find_by(oodapost_id: oodapost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :oodapost_id, oodapost.id %>
    <%= f.submit 'お気に入りから外す', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :oodapost_id, oodapost.id %>
    <%= f.submit 'お気に入りに登録する', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>