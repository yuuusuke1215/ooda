<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <div class="blog-post">
        <h1 class="blog-post-title"><%= @oodapost.title %></h1>
        <p class="blog-post-meta"><%= @oodapost.created_at %> by <%= link_to @oodapost.user.name, user_path(@oodapost.user) %></p>
        
        <hr>
        <br>
        <h3>観察(Observe)</h3>
        <p><%= @oodapost.observe %></p>
        <br>
        <hr>
        <br>
        <h3>仮説構築(Orient)</h3>
        <p><%= @oodapost.orient %></p>
        <br>
        <hr>
        <br>
        <h3>意思決定(Decide)</h3>
        <p><%= @oodapost.decide %></p>
        <br>
        <hr>
        <br>
        <h3>実行(Act)</h3>
        <p><%= @oodapost.act %></p>
        <br>
        <hr>
        <%= render 'favorites/favorite_button', oodapost: @oodapost %>
        <li class="media mb-3">
          <img class="mr-2 rounded" src="<%= gravatar_url(@oodapost.user, { size: 70 }) %>" alt="">
          <div class="media-body">
            <div>
              <p><%= link_to @oodapost.user.name, user_path(@oodapost.user) %></p>
            </div>
            <div>
              <p><%= @oodapost.user.profile %></p>
              <% unless current_user.id == @oodapost.user.id %>
                <%= render 'relationships/follow_button', user: @oodapost.user %>
              <% end %>
            </div>
          </div>
        </li>
      </div>
    </div>
    
  </div>
</main>